<android.support.v4.widget.DrawerLayout
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="kr.edcan.lostandfound.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#506AAE"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_container_header"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#3E5795"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/edittext_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/search_background"
                    android:hint="아래의 분류를 고른 후 검색..."
                    android:inputType="textNoSuggestions"
                    android:padding="8dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:singleLine="true"
                    android:textColor="#000"
                    android:textColorHint="#8E908C"
                    android:textSize="13dp" />

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="2dp">

                    <ImageView
                        android:id="@+id/main_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_search" />
                </com.balysv.materialripple.MaterialRippleLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3E5795"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <Spinner
                    android:id="@+id/lost_type"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/transparent" />

                <Spinner
                    android:id="@+id/lost_space"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="@color/transparent" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="16dp"
                            android:src="@drawable/title_train" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="지하철"
                                android:textColor="#FFF"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/main_tile_subway_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:gravity="center_vertical"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/main_tile_subway_images_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:padding="7dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_line_1" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_2" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_3" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_4" />

                                    <LinearLayout
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="7dp"
                                        android:background="#526EB3" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="12dp"
                                    android:singleLine="true"
                                    android:text="서울메트로"

                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/main_tile_subway_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:padding="5dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/main_tile_subway_images_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="7dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_line_5" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_6" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_7" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_8" />

                                    <LinearLayout
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="7dp"
                                        android:background="#526EB3" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:ellipsize="end"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="12dp"
                                    android:singleLine="true"
                                    android:text="서울도시철도공사"
                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/main_tile_subway_3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:padding="5dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/main_tile_subway_images_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="7dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_line_gyeongui_jungang" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_bundang_suin" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="7dp"
                                        android:src="@drawable/ic_line_gyeongchun" />

                                    <LinearLayout
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="7dp"
                                        android:background="#526EB3" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="12dp"
                                    android:text="코레일"

                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:padding="5dp"
                                android:id="@+id/main_tile_subway_4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:id="@+id/main_tile_subway_images_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:padding="7dp">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_line_9" />

                                    <LinearLayout
                                        android:layout_width="2dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="7dp"
                                        android:background="#526EB3" />
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:paddingBottom="12dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="12dp"
                                    android:text="기타"

                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="16dp"
                            android:src="@drawable/title_bus" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="버스"
                                android:textColor="#FFF"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/main_tile_bus_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal"
                                android:padding="12dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="도시버스"
                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/main_tile_bus_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal"
                                android:padding="12dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="마을버스"
                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="16dp"
                            android:src="@drawable/title_taxi" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="택시"
                                android:textColor="#FFF"
                                android:textSize="22sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:id="@+id/main_tile_taxi_1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal"
                                android:padding="12dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="개인택시"
                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/main_tile_taxi_2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/main_tile_background"
                                android:orientation="horizontal"
                                android:padding="12dp">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="7dp"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:text="법인택시"
                                    android:textColor="#FFF"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/menu_drawer" />
</android.support.v4.widget.DrawerLayout>