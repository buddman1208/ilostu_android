<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.edcan.lostandfound"
    android:versionCode="2"
    android:versionName="1.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionbar"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SettingActivity"></activity>
        <activity android:name=".activity.LostViewActivity" />
        <activity android:name=".activity.WebViewActivity"></activity>
        <activity android:name=".activity.LostListActivity"></activity>
        <activity android:name=".activity.SearchListActivity"></activity>
        <activity android:name=".activity.SearchViewActivity"></activity>
        <activity android:name=".activity.SaveListActivity">
        </activity>
        <activity android:name=".activity.GuideActivity"></activity>
        <activity android:name=".activity.SaveViewActivity"></activity>
        <activity android:name=".activity.InfoActivity"></activity>
        <activity android:name=".activity.FindInfoActivitiy"></activity>
        <activity android:name=".activity.CenterInfoActivity">

        </activity>
    </application>

</manifest>
